<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Consultar Rota de Viagem</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulário de consulta -->
                <form id="searchForm">
                    <div class="form-group">
                        <label for="searchOrigin">Origem</label>
                        <input type="text" class="form-control" id="searchOrigin" name="Origem">
                    </div>
                    <div class="form-group">
                        <label for="searchDestination">Destino</label>
                        <input type="text" class="form-control" id="searchDestination" name="Destino">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="submitSearchForm()">Buscar</button>
            </div>
        </div>
    </div>
</div>