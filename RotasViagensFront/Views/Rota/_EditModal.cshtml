<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar Rota</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulário de edição -->
                <form id="editForm">
                    <input type="hidden" id="editId" name="Id" value="">
                    <div class="form-group">
                        <label for="editOrigin">Origem</label>
                        <input type="text" class="form-control" id="editOrigin" name="Origin">
                    </div>
                    <div class="form-group">
                        <label for="editDestination">Destino</label>
                        <input type="text" class="form-control" id="editDestination" name="Destination">
                    </div>
                    <!-- Adicione mais campos conforme necessário -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="submitEditForm()">Salvar mudanças</button>
            </div>
        </div>
    </div>
</div>
